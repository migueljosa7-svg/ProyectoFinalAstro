---
const response = await fetch('https://jsonplaceholder.typicode.com/posts?_limit=3');
const posts = await response.json();
---

<section class="mb-16 rounded-xl p-4 pt-10">
  <h2 id="noticias-title" class="text-4xl font-bold text-center mb-10 text-yellow-400">Noticias de Última Hora</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {posts.map((post) => (
      <div class="news-card bg-gray-700 text-white p-6 rounded-xl shadow-2xl transform hover:scale-[1.02] transition duration-300 border-t-4 border-yellow-500">
        <h4 class="text-xl font-bold mb-2">{post.title}</h4>
        <p class="text-sm text-gray-300">{post.body.substring(0, 100)}...</p>
        <a href="#" class="mt-4 inline-block text-yellow-400 hover:text-yellow-300 text-sm font-semibold">Leer más</a>
      </div>
    ))}
  </div>
</section>

<script>
import { gsap } from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';

gsap.registerPlugin(ScrollTrigger);

document.addEventListener('DOMContentLoaded', () => {
  // Animación del título
  gsap.from("#noticias-title", {
    y: -50,
    opacity: 0,
    duration: 1.2,
    ease: "power3.out",
    scrollTrigger: {
      trigger: "#noticias-title",
      start: "top 80%",
      toggleActions: "play none none none"
    }
  });

  // Animación de tarjetas de noticias
  gsap.from(".news-card", {
    y: 50,
    opacity: 0,
    stagger: 0.2,
    duration: 0.8,
    ease: "power2.out",
    scrollTrigger: {
      trigger: ".news-card",
      start: "top 90%",
      toggleActions: "play none none none"
    }
  });
});
</script>
