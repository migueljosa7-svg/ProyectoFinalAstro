<!-- SCRIPT PARA ACTIVAR MENÃš EN MÃ“VIL CON HOVER -->
<script>
    const asideMenu = document.getElementById("aside-menu");
    const hamburger = document.getElementById("hamburger-btn");

    if (asideMenu && hamburger) {
        hamburger.addEventListener("mouseenter", () => {
            asideMenu.classList.remove("translate-x-full");
        });

        const hideMenu = () => {
            if (!asideMenu.matches(':hover') && !hamburger.matches(':hover')) {
                asideMenu.classList.add("translate-x-full");
            }
        };

        hamburger.addEventListener("mouseleave", hideMenu);
        asideMenu.addEventListener("mouseleave", hideMenu);
    }
</script>
